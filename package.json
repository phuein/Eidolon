{
  "name": "eidolon",
  "version": "0.0.1",
  "description": "A metaverse; a virtual universe.",
  "dependencies": {
    "@types/bootstrap": "^4.1.2",
    "@types/cannon": "^0.1.3",
    "babylonjs": "^3.2.0",
    "cannon": "^0.6.2",
    "express": "^4.16.3",
    "monaco-editor": "^0.14.3",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "@types/babylonjs": "^2.4.1",
    "@types/jquery": "^3.3.5",
    "@types/socket.io": "^1.4.36",
    "@types/three": "^0.92.14"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "indent": [
        2,
        2,
        {
          "VariableDeclarator": 2
        }
      ],
      "linebreak-style": [
        2,
        "windows"
      ],
      "quotes": [
        2,
        "single"
      ],
      "semi": [
        2,
        "never"
      ],
      "no-unused-vars": 0,
      "no-undef": 0,
      "no-console": 0,
      "space-in-parens": [
        2,
        "never"
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
      "comma-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ]
    }
  }
}
